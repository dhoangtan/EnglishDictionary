<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/fr_definition_word_item_word_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="get"
        android:textSize="30sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fr_definition_word_item_phonetics_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/fragment_definition_phonetic_item"

        app:layout_constraintTop_toBottomOf="@id/fr_definition_word_item_word_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/fr_definition_word_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"

        android:background="@color/black"

        app:layout_constraintTop_toBottomOf="@id/fr_definition_word_item_phonetics_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fr_definition_word_item_meanings_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintTop_toBottomOf="@id/fr_definition_word_item_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/fragment_definition_meaning_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>