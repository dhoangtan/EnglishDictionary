<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/custom_bg_add_wordlist"
    android:backgroundTint="#A6B8D3"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/fr_wordlist_detail_word_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Monday"
        android:textSize="17sp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/fr_wordlist_detail_definition_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="The day after Sunday and before Tuesday"
        android:textSize="17sp"
        android:textStyle="italic"

        app:layout_constraintTop_toBottomOf="@id/fr_wordlist_detail_word_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/fr_wordlist_detail_remove_button"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:background="@drawable/ic_remove_24"

        app:layout_constraintTop_toBottomOf="@id/fr_wordlist_detail_definition_text_view"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>