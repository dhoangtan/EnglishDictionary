<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/fr_definition_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="An attempt"
        android:textSize="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/fr_definition_example_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/example"
        android:textSize="17sp"
        android:textStyle="italic|bold"

        app:layout_constraintTop_toBottomOf="@id/fr_definition_definition"
        app:layout_constraintLeft_toLeftOf="@+id/fr_definition_definition"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/fr_definition_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="I gave unicycling a try but I couldnâ€™t do it."
        android:textSize="17sp"

        app:layout_constraintTop_toBottomOf="@id/fr_definition_example_title"
        app:layout_constraintLeft_toLeftOf="@id/fr_definition_example_title"

        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        />

    <Button
        android:id="@+id/fr_definition_add_to_word_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/add_to_word_list"

        app:layout_constraintTop_toBottomOf="@id/fr_definition_example"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>